<!-- Welcome Banner -->
<div class="wrapper" id="welcome-wrapper">
  <%= render 'shared/navbar' %>
  <div class="header">
  <div class="header-welcome">
    <h1>Be the change!</h1>
  </div>
  <div class="tagline-welcome">
    <h3>Connect with high impact initiatives and create a positive impact</h3>
  </div>
  <%= link_to "Sign in", new_user_session_path, class: "btn-feiy-primary button-cta-primary" %>
  </div>
  <!-- SEARCH -->
  <div class="search-wrapper">
    <p>Find an organization</p>
    <%= form_tag organizations_search_path, method: :get do |f| %>
      <%= text_field_tag 'name', params[:name], placeholder: "  Search", class: "text-search-field" %>
      <%= select_tag 'category', options_for_select(@categories), class: "text-search-dropdown" %>
      <%= submit_tag 'Search', class: "btn-feiy-rec-white"%>
    <% end %>
  </div>
</div>


<!-- ORGANIZATIONS -->
<% if @organizations.any? %>
  <div class="title-divider text-center">
    <h4>ORGANIZATIONS</h4>
  </div>
  <div class="container">
    <div class="row">
      <% @organizations.take(3).shuffle.each do |organization| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="organization-card">
          <% if organization.photo %>
            <img src="<%= cl_image_path organization.photo.path, height: 180, width: 350, crop: :fill%>", class='organization-card-img' >
          <% else %>
            <%= image_tag "card_org_ngo_default.jpg", class: "organization-card-img" %>
          <% end %>
          <div class="organization-card-description">
            <% if organization.categories.any? %>
              <p id="organization-category"><%= organization.categories.first.name.upcase %></p>
            <% end %>
            <p id="organization-name"><strong><%= organization.name %></strong></p>
            <p id="organization-problem"><%= truncate(organization.problem) %></p>
          </div>
          <div class="organization-card-icons">
            <i class="fa fa-thumbs-up organization-card-icon"></i>
            <span class="organization-card-icon-text"><%= organization.votes_for.size %></span>
          </div>
          <%= link_to "", organization_path(organization), class: "organization-card-link" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row button-row">
      <div class="col-xs-12">
        <%= link_to "More organizations", organizations_path, class: "btn-feiy-primary button-cta-primary" %>
      </div>
    </div>
  </div>
<% else %>
<div class="wrapper" id="call-to-action-wrapper">
  <%= link_to "JOIN US NOW!", new_organization_path, class: "btn-feiy-primary button-cta-primary" %>
</div>
<% end %>

<!-- JOBS -->
<% if @jobs.any? %>
  <div class="title-divider text-center" id="title-padding" >
    <h4>JOBS</h4>
  </div>
  <div class="container">
    <div class="row">
      <% @jobs.take(3).shuffle.each do |job| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="job-card">
          <div class="job-logo"></div>
          <div class="job-card-description">
          <p id="job-name"><strong><%= job.organization.name %></strong></p>
            <p id="job-name"><%= job.name %></p>
            <p id="job-problem"><%= job.job_type%></p>
            <p id="job-category"><%= job.address %></p>
          </div>
           <%= link_to "", organization_job_path(job.organization_id, job.id) , class: "organization-card-link" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row button-row">
      <div class="col-xs-12">
        <%= link_to "More jobs", jobs_path, class: "btn-feiy-primary button-cta-primary" %>
      </div>
    </div>
  </div>
<% end %>




<!-- EVENTS -->
<% if @events.any? %>
  <div class="title-divider text-center" id="title-padding" >
    <h4>EVENTS</h4>
  </div>
  <div class="container">
    <div class="row">
      <% @events.take(6).each  do |event| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="job-card">
            <div class="job-logo"></div>
            <div class="job-card-description">
              <p id="job-name"><strong><%= event.name %></strong></p>
              <p id="job-name">Hosted by <%= event.organization.name %></p>
              <p id="job-type"><%= truncate(event.content)%></p>
              <p id="job-address"><%= event.date.strftime("%B %e, %Y, %l:%M %p ") %></p>
            </div>
            <%= link_to "", organization_event_path(event.organization_id, event.id), class: "organization-card-link" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row button-row">
      <div class="col-xs-12">
        <%= link_to "More events", events_path, class: "btn-feiy-primary button-cta-primary" %>
      </div>
    </div>
  </div>
<% end %>

