<!-- Welcome Banner -->
<div class="wrapper" id="welcome-wrapper">
  <div class=header>
    <div class="header-welcome">
      <h1>Change the World</h1>
    </div>
    <div class="tagline-welcome">
      <h2>Connect with High Impact Organizations in China</h2>
    </div>
      <div class="text-center">
      <%= form_tag organizations_search_path, method: :get do |f| %>
        <%= text_field_tag :name, params[:name], placeholder: "Search Organizations" %>
        <%= select_tag 'category', options_for_select(Category.all.map{|el| [el.name, el.id]}) %>
        <%= submit_tag 'Search', class: "btn-feiy-primary"%>
      <% end %>
      </div>
  </div>
</div>

<!-- ORGANIZATIONS -->
<div class="title-divider text-center">
  <h2>ORGANIZATIONS</h2>
</div>
<div class="container">
  <div class="row">
    <% @organizations.each do |organization| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="organization-card">
        <% if organization.photo %>
          <img src="<%= cl_image_path organization.photo.path, height: 180, width: 350, crop: :fill%>", class='organization-card-img' >
        <% else %>
          <%= image_tag "card_org_ngo_default.jpg", class: "organization-card-img" %>
        <% end %>
        <div class="organization-card-description">
          <p id="organization-name"><strong><%= organization.name %></strong></p>
          <p id="organization-problem"><%= organization.problem%></p>
          <% if organization.categories.any? %>
            <p id="organization-category"><%= organization.categories.first.name %></p>
          <% end %>
        </div>
        <div class="organization-card-icons">
          <i class="fa fa-thumbs-up organization-card-icon"></i>
          <span class="organization-card-icon-text"><%= organization.votes_for.size %></span>
        </div>
        <%= link_to "", organization_path(organization), class: "organization-card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- JOBS -->
<div class="title-divider text-center" id="title-padding" >
  <h2>JOBS</h2>
</div>
<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="job-card">
        <div class="job-logo"></div>
        <div class="job-card-description">
        <p id="job-name"><strong><%= job.organization.name %></strong></p>
          <p id="job-name"><%= job.name %></p>
          <p id="job-problem"><%= job.job_type%></p>
          <p id="job-category"><%= job.address %></p>
        </div>
         <%= link_to "", organization_job_path(job.organization_id, job.id) , class: "organization-card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>




<!-- EVENTS -->
<div class="cards-wrapper">
<div class="title-divider text-center" id="title-padding" >
  <h2>EVENTS</h2>
</div>

<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="job-card">
        <div class="job-logo"></div>
        <div class="job-card-description">
          <p id="job-name"><strong><%= event.name %></strong></p>
          <p id="job-name">Hosted by <%= event.organization.name %></p>
          <p id="job-type"><%= truncate(event.content)%></p>
          <p id="job-address"><%= event.date.strftime("%B %e, %Y, %l:%M %p ") %></p>
        </div>
        <%= link_to "", organization_event_path(event.organization_id, event.id), class: "organization-card-link" %>
    <% end %>
  </div>
</div>
<!-- FEATURES -->
<div class="title-divider text-center" id="features-img">
  <h2>HOW FEIY WORKS</h2>
  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="features text-center">
        <%= image_tag "icon_feiy_1.svg", class: "feiy-feature-img" %>
        <div class="feiy-feature-text">
          <h5>Explore the ecosystem of high impact initiatives in China</h3>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="features text-center">
        <%= image_tag "icon_feiy_2.svg", class: "feiy-feature-img" %>
        <div class="feiy-feature-text">
          <h5>Let the world know about your organization</h3>
        </div>
      </div>
    </div>
     <div class="col-xs-12 col-sm-4">
      <div class="features text-center">
        <%= image_tag "icon_feiy_3.svg", class: "feiy-feature-img" %>
        <div class="feiy-feature-text">
          <h5>Find the changemaker fo tomorrow</h3>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

