<div class="title-divider text-center">
  <h2>ORGANIZATIONS</h2>
</div>

<div class="container">
  <div class="row">
    <% @organizations.each do |organization| %>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="organization-card">
        <% if organization.photos.first %>
          <img src="<%= cl_image_path organization.photos.first.path, height: 180, width: 350, crop: :fill%>", class='organization-card-img' >
        <% else %>
          <img src="https://s-media-cache-ak0.pinimg.com/originals/41/20/83/412083f76fe2e72b979902158f91d2bf.jpg" alt="image" class="organization-card-img">
        <% end %>
        <div class="organization-card-description">
          <p id="organization-name"><strong><%= organization.name %></strong></p>
          <p id="organization-problem"><%= organization.problem%></p>
        </div>
        <%= link_to "", organization_path(organization), class: "organization-card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="wrapper" id="call-to-action-wrapper">
