<% title "Sign up" %>

<div class="form-container">
  <h2>Sign up</h2>
  <div class="join-us-message-container">
    <p>Join our community of people that want to be actor of change to access our full content! 
    </p>
    <p>We will share with you more inspiring stories about social entrepreneurs in China, meaningful events or work opportunities!</p>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :city, required: true %>
      <%= f.input :email, required: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
    </div>
     <div class="form-inputs">
      <h5><strong>Upload an avatar</strong></h5>
      <%= f.attachinary_file_field :avatar %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-feiy-primary btn-form"  %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
