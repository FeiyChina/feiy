
<div class="form-container" id="message-form">
  <h2>Message</h2>
  <%= form_for organization_organization_contact_path(@organization) do |f| %>
    <div class="form-inputs">
      <textarea type="text" name="body" class="textarea"></textarea>
    </div>
    <div class="form-actions">
      <%= f.submit "Send", class: "btn-feiy-primary" %>
    </div>
  <% end %>
</div>
