<div class="form-container">
<h2>Update your organization:</h2>
<%= simple_form_for(@organization) do |f| %>
  <div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :problem %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :website %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.input :logo, as: :attachinary %>
  <%= f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, :multiple => true %>
  </div>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
