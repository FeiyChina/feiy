<h1>organization show page</h1>
<br>
<h2><%= @organization.name %></h2>
<p><%= @organization.problem %></p>
<p><%= @organization.description %></p>
<p><%= @organization.address %></p>
<p><%= @organization.website %></p>
<br>

<% if user_signed_in? && @organization.user_id == current_user.id %>
  <%= link_to "Delete", organization_path(@organization), method: :delete %>
  <%= link_to "Update", organization_path(@organization), method: :patch %>
<% end %>

  <%= form_tag "/organizations/add_new_comment" do %>
    <%= hidden_field_tag "id", @organization.id %>
    <%= text_area_tag "comment[comment]" %>
    <%= submit_tag "Post Comment" %>
  <% end %>
