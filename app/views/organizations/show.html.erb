<h1><%= @organization.name %></h1>
<br>
<p><%= @organization.problem %></p>
<p><%= @organization.description %></p>
<p><%= @organization.address %></p>
<p><%= @organization.website %></p>
<% if @organization.photos? %>
  <% @organization.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
  <% end %>
<% end %>

<% if user_signed_in? && @organization.user_id == current_user.id %>
  <%= link_to "Delete", organization_path(@organization), method: :delete %>
  <%= link_to "Update", organization_path(@organization), method: :patch %>
<% end %>

<!-- like function -->
<div class="action-like">
<%= link_to like_organization_path(@organization), method: :post do %>
  <i class="fa fa-thumbs-up"></i>
<% end %>
<%= @organization.votes_for.size %> Likes
</div>


<!-- comment function -->
<div class="comment-section">
  <%= form_tag create_comment_path, method: "post" do %>
    <%= hidden_field_tag "id", @organization.id %>
      <%= text_area_tag :comment %>
      <%= submit_tag "Submit" %>
    <% end %>
</div>
<div class="comment_list">
  <% @organization.comments.each do |comment| %>
    <%= comment.comment %>
    <%= comment.user.name %>
  <% end %>
</div>

<div>
  <%= link_to "Back to dashboard", dashboard_path %>
</div>
