<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= cl_image_tag @organization.id.logo.path, width: 100, height: 100, crop: :fill %></h1>
      <h1>Name: <%= @job.name %></h1>
      <h1>Address: <%= @job.address %></h1>
      <h1>Website: <%= @job.website %></h1>
      <h1>Email: <%= @job.email %></h1>
      <h1>Job Type: <%= @job.job_type %></h1>
      <h1>Task: <%= @job.task %></h1>
      <h1>Requirement: <%= @job.requirement %></h1>
      <h1>Status: <%= @job.active ? "open" : "closed" %></h1>
    </div>
  </div>
</div>
