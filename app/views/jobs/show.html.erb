<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Name: <%= @job.name %></h1>
      <h1>Address: <%= @job.address %></h1>
      <h1>Website: <%= @job.website %></h1>
      <h1>Email: <%= @job.email %></h1>
      <h1>Job Type: <%= @job.job_type %></h1>
      <h1>Task: <%= @job.task %></h1>
      <h1>Requirement: <%= @job.requirement %></h1>
      <h1>Status: <%= @job.active ? "open" : "closed" %></h1>
    </div>

     <% if user_signed_in? && @organization.user_id == current_user.id %>
    <%= link_to "Update", edit_organization_job_path(@job.organization_id, @job), method: :get, class: 'btn btn-warning'  %>
    <%= link_to "Delete", organization_job_path(@job.organization_id, @job), method: :delete, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>



