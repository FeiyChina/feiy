<!DOCTYPE html>
<html>
  <head>
    <% if @article %>
      <meta property="og:image" content='<%= cl_image_path(@article.photo.path) %>'/>
    <% end %>
    <% if current_page? root_path %>
      <title>Feiy<%= if content_for?(:title) then ' | ' + yield(:title) end %></title>
    <% else %>
      <title><%= if content_for?(:title) then yield(:title) + ' | ' end %>Feiy</title>
    <% end %>
    <% if content_for?(:description) %>
      <meta name="description" content="<%= yield(:description) %>" />
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="alternate" href="http://www.feiy.co/" hreflang="en-cn"/>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="apple-mobile-web-app-title" content="Feiy">
    <meta name="application-name" content="Feiy">
    <meta name="theme-color" content="#ffffff">

    <% if Rails.env.production? %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106070409-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-106070409-1');
      </script>
    <% end %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= cloudinary_js_config %>
  </head>
  <body>
    <% if current_page? root_path %>
      <% %>
    <% else %>
      <%= render 'shared/navbar' %>
    <% end %>
    <%= render 'shared/flashes' %>
    <%= yield %>
    <%= render 'shared/footer' %>
    <%= render 'shared/developers_btn' %>
  </body>
</html>
