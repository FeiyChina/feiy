<div class="form-container">
<h2>Edit event information</h2>
  <%= simple_form_for [@organization, @event] do |f| %>
  <div class="form-inputs">
    <%= f.input :name, autofocus: true %>
    <%= f.input :content, label: "Description", as: :text, :input_html => { :maxlength => 500, :style => 'height: 200px' } %>
    <%= f.input :venue, label:"Location - recommend address in chinese" %>
    <%= f.input :date %>
  </div>

    <% if user_signed_in? && @organization.user_id == current_user.id %>
    <div class="form-actions">
    <%= f.submit "Update job", class: "btn btn-feiy-primary" %>
    <% end %>
    </div>
  <% end %>
</div>
